<div class='user_add'>
  <%= form_tag(new_user_tournament_path, class: "form-inline") do %>
    <div class="">
      <%= text_field_tag :invite_email %>
      <%= hidden_field_tag 'tournament_id', "#{@tournament.id}" %>
      <%= submit_tag "Invite to tournament", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<section id="tournament" class="content-section text-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h3><%= @tournament.name %></h3>
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col"></th>
              <% @tournament.segments.each do |segment| %>
                <th scope="col"><%= segment.name %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @user_data.each do |key, value| %>
              <tr>
                <th scope="row"><%= key.name %></th>
                <% value.each do |key, value| %>
                  <th scope="row"><%= value %></th>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
